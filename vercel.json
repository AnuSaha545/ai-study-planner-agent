{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "framework": "vite",
  "env": {
    "VITE_API_URL": {
      "description": "Backend API URL",
      "default": "http://localhost:8000"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://your-backend-url.com/api/$1"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "includeFiles": "backend/**",
      "memory": 256,
      "maxDuration": 30
    }
  }
}
